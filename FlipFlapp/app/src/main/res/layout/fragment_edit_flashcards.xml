<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.flashcards.EditFlashcardsFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue3">

        <TextView
            android:id="@+id/tvEditSetsBox"
            android:layout_width="385dp"
            android:layout_height="336dp"
            android:background="@drawable/box"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <EditText
            android:id="@+id/editNewUserFirstName"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:background="@color/white"
            android:ems="10"
            android:hint="Title"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvEditSetsBox"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/tvEditSetsBox"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.374" />

        <Button
            android:id="@+id/btnNewUserSave"
            android:layout_width="150dp"
            android:layout_height="75dp"
            android:layout_marginTop="95dp"
            android:layout_marginBottom="92dp"
            android:text="Save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEditSetsBox"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/EditEditFlashcardDescription"
            android:layout_width="275dp"
            android:layout_height="121dp"
            android:layout_marginTop="88dp"
            android:background="@color/white"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Description"
            android:inputType="textMultiLine"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvEditSetsBox"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/tvEditSetsBox"
            app:layout_constraintTop_toBottomOf="@+id/editNewUserFirstName"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvEditFlashcardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flashcard Title"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/editNewUserFirstName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvEditSetsBox"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/tvEditFlashcardDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Description"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/EditEditFlashcardDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editNewUserFirstName" />




    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>